<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/preferences"
	android:key="preferences">
	<PreferenceCategory android:title="@string/appearance_category">
		<ListPreference
			android:key="design_string"
			android:title="@string/design"
			android:entries="@array/design_names"
			android:entryValues="@array/design_values"
			android:defaultValue="-1"/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/arguments_category">
		<androidx.preference.SwitchPreferenceCompat
			android:defaultValue="true"
			android:key="show_sums"
			android:title="@string/show_sums"
			android:summary="@string/show_sums_summary"/>
		<androidx.preference.SwitchPreferenceCompat
			android:defaultValue="false"
			android:key="sort_on_insert"
			android:title="@string/sort_on_insert"
			android:summary="@string/sort_on_insert_summary"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="import_export"
		android:title="@string/import_export_category">
		<Preference
			android:key="export_database"
			android:title="@string/export_database"
			android:summary="@string/export_database_summary"/>
		<Preference
			android:key="import_database"
			android:title="@string/import_database"
			android:summary="@string/import_database_summary"/>
	</PreferenceCategory>
</PreferenceScreen>
